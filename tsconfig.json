{
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2020",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
}
